{% extends 'base.html.twig' %}

{% block title %} Connexion {% endblock %}

{% block body %}
<form method="post" class="text-center mw-75 m-5 mb-10">
    <h2 class="mt-5 mb-5 h3 font-weight-normal">Connexion : </h2>
    <div class="border border-2 p-5 text-center justify-content">
        <div class="row justify-content-center">
            <div class="col-md-9">
                <form>
                    <div class="form-group mt-2 mb-5">
                        <label for="inputEmail">Email:</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                    </div>
                    <div class="form-group mt-5 mb-2">
                        <label for="inputPassword">Mot de passe:</label>
                        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                    </div>
                    <a class="nav-link" href="{{ path('app_forget_password')}}">Mot de passe oubli√© ?</a>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                    <button class="btn btn-lg btn-primary" type="submit">
                        Sign in
                    </button>
                </form>
            </div>
        </div>
    </div>
</form>
{% endblock %}
